<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <!-- Shimmer Placeholder for Banner -->

    <View
        android:id="@+id/shimmer_banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/corner"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Shimmer Placeholder for Title -->
    <View
        android:id="@+id/shimmer_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/corner"
        app:layout_constraintTop_toBottomOf="@id/shimmer_banner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Shimmer Placeholder for Card Pairs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/shimmer_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Shimmer Placeholder for Card Pair 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="3dp">

            <View
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/corner" />

            <View
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/corner" />
        </LinearLayout>

        <!-- Shimmer Placeholder for Card Pair 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp">

            <View
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/corner" />

            <View
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/corner" />
        </LinearLayout>

        <!-- Repeat for other card pairs -->
        <!-- Add more LinearLayouts with Views for each card pair -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp">

            <View
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/corner" />

            <View
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/corner" />
        </LinearLayout>


    </LinearLayout>
    <!-- Shimmer Placeholder for Footer -->

</androidx.constraintlayout.widget.ConstraintLayout>